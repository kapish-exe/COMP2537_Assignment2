<%- include('templates/header'); %>
<div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 offset-md-3">
        <h1 class="text-center m-5">Sign Up</h1>
        <form action="/submitUser" method="POST">
          <div class="form-group m-3" id="formBasicName">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Enter name"
            />
          </div>
  
          <div class="form-group m-3" id="formBasicUsername">
            <label for="email">Email</label>
            <input
              type="text"
              class="form-control"
              id="username"
              name="email"
              placeholder="Enter email"
            />
          </div>
  
          <div class="form-group m-3" id="formBasicPassword">
            <label for="password">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Password"
            />
          </div>
  
          <button type="submit" class="btn btn-primary">
            Sign Up
          </button>
        </form>
      </div>
    </div>
  </div>  
<%- include("templates/footer") %> 